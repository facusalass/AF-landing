---

<section id="proyectos" class="py-16 sm:py-32">
  <div class="max-w-7xl mx-auto px-6 lg:px-10">
    <div class="max-w-3xl text-left mb-16">
      <h2 class="font-mont text-3xl md:text-4xl font-semibold text-indigo-200">
        Nuestros Trabajos
      </h2>
      <p class="font-poppins text-neutral-300 text-lg md:text-xl mt-4">
        Soluciones reales para clientes reales.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="border border-white/10 rounded-2xl bg-white/5 overflow-hidden transition duration-300 group hover:bg-white/10 hover:border-white/20">
          
          {/* Ahora esto funcionar√° para todas las im√°genes */}
          <img 
            src={project.imgSrc} 
            alt={`Screenshot de ${project.title}`} 
            class="w-full h-48 object-cover object-top transition duration-300 group-hover:opacity-80"
          />
          
          <div class="p-6">
            <h3 class="font-mont text-xl font-semibold mb-2 text-indigo-300">{project.title}</h3>
            <p class="font-poppins text-neutral-200/80 text-sm leading-relaxed mb-4">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mb-6">
              {project.tech.map(techName => (
                <span class="bg-indigo-400/10 text-indigo-300 text-xs font-medium px-2.5 py-0.5 rounded-full">
                  {techName}
                </span>
              ))}
            </div>

            <a 
              href={project.url}
              class="inline-block px-5 py-2 rounded-full border border-indigo-300/60 text-indigo-100 text-sm font-poppins hover:border-cyan-300 hover:text-cyan-200 transition"
            >
              Ver proyecto
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>